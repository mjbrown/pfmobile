<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GeneratorActivity" >

    <Button
        android:id="@+id/char_statistics_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Character Sheet" 
        android:onClick="launchStatistics" />

    <Button
        android:id="@+id/char_levels_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_statistics_button"
        android:text="Class Levels and Feats" 
        android:onClick="launchLevels" />

    <Button
        android:id="@+id/char_inventory_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_levels_button"
        android:text="Forge and Enchant Items" 
        android:onClick="launchInventory" />
    
    <Button
        android:id="@+id/char_attacks_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_inventory_button"
        android:text="Attacks and Actions" 
        android:onClick="launchAttacks"/>

    <Button
        android:id="@+id/char_spells_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_attacks_button"
        android:text="Spellbook" 
        android:onClick="launchSpellbook"/>

    <Button
        android:id="@+id/char_prepared_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_spells_button"
        android:text="Spells Known/Prepared" />
    
    <Button 
        android:id="@+id/char_active_effects"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/char_prepared_button"
        android:text="Active Effects" />
        
    <Button 
        android:id="@+id/char_show_xml" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_active_effects"
        android:text="Show XML"
        android:onClick="launchCharXML" />
    
    <Button 
        android:id="@+id/inv_show_xml" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_show_xml"
        android:text="Show Inventory XML"
        android:onClick="launchInventoryXML" />
    
    <Button 
        android:id="@+id/eff_show_xml" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/inv_show_xml"
        android:text="Show Effect XML"
        android:onClick="launchEffectXML" />
    
</RelativeLayout>
</ScrollView>