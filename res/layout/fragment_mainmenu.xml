<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GeneratorActivity" >

    <Button
        android:id="@+id/char_info_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/char_info"
        android:onClick="launchCharInfo" />

    <Button
        android:id="@+id/char_statistics_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_info_button"
        android:text="Character Sheet" 
        android:onClick="launchStatistics" />

    <Button
        android:id="@+id/char_levels_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_statistics_button"
        android:text="@string/char_levels" 
        android:onClick="launchLevels" />

    <Button
        android:id="@+id/char_equip_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_levels_button"
        android:text="@string/char_equip" 
        android:onClick="launchEquipment" />

    <Button
        android:id="@+id/char_inventory_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_equip_button"
        android:text="Inventory" 
        android:onClick="launchInventory" />
    
    <Button
        android:id="@+id/char_spells_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_inventory_button"
        android:text="@string/char_spells" />

    <Button
        android:id="@+id/char_pet_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_spells_button"
        android:text="@string/char_pet" />
    
    <Button 
        android:id="@+id/char_show_xml" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_pet_button"
        android:text="Show XML"
        android:onClick="launchCharXML" />
    <Button 
        android:id="@+id/inv_show_xml" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/char_show_xml"
        android:text="Show Inventory XML"
        android:onClick="launchInventoryXML" />
    

</RelativeLayout>
</ScrollView>