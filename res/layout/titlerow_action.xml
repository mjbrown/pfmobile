<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
	        android:id="@+id/action_title_text"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="4"
	        android:gravity="left"
	        android:includeFontPadding="false"
	        android:textIsSelectable="true"
	        android:textSize="24sp" />
        
        <LinearLayout 
            android:id="@+id/action_uses_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Uses:" />
            
            <TextView
                android:id="@+id/action_uses_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="20sp"
                android:text="0 of 0" />
                
        </LinearLayout>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
    <Button 
		android:text="Use"
        android:id="@+id/action_perform_button"
        android:layout_width="0dip"
        android:layout_height="35sp"
        android:layout_weight="1.2"
        android:textSize="12sp"
        android:focusable="false"
        android:includeFontPadding="false" />

    <Button 
		android:text="Summary"
        android:id="@+id/action_summary_button"
        android:layout_width="0dip"
        android:layout_height="35sp"
        android:layout_weight="1.2"
        android:textSize="12sp"
        android:focusable="false"
        android:includeFontPadding="false" />

    <Button 
		android:text="Edit"
        android:id="@+id/action_edit_button"
        android:layout_width="0dip"
        android:layout_height="35sp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:focusable="false"
        android:includeFontPadding="false" />
    
    <Button 
		android:text="Hide"
        android:id="@+id/action_hide_button"
        android:layout_width="0dip"
        android:layout_height="35sp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:focusable="false"
        android:includeFontPadding="false" />
    
    </LinearLayout>

</LinearLayout>