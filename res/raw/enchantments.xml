            	<bonus type="Damage" value="1" />
            </onHitEffect>
            <action name="Drop Off Hand [Item Name]" cost="Free">
                <attack target="Self">
                    <onHitCondition key="Equipment" remove="[Item Name]" />
                    <onHitCondition key="Equipment" remove="Off Hand" />
                </attack>
            </action>
           </conditional>
    </enhancement>
