<?xml version="1.0" encoding="utf-8"?>
<equipmentTemplates>
    <template name="Blank Item">
        <item name="Unnamed" slot="Head" >
            <enhancement name="Base Item">
	            <bonus type="Equipment Cost" value="1" />
	            <bonus type="Encumbrance" value="1" />
	            <itemProperty type="Hardness" value="2" />
	            <itemProperty type="Hit Points" value="5" />
            </enhancement>
        </item>
    </template>
    <template name="Unarmored">
        <item name="Unarmored" slot="Armor" >
            <enhancement name="Base Item">
		        <bonus type="Equipment Cost" value="0" />
		        <bonus type="Encumbrance" value="0" />"
	            <condition key="Equipment" name="Unarmored" />
            </enhancement>
        </item>
    </template>
    <template name="Light Armor">
        <item name="Steel Chain Shirt" slot="Armor" >
            <enhancement name="Base Item">
	            <itemProperty type="Proficiency" value="Light Armor" />
	            <bonus type="Flat Footed Armor Class" stackType="Armor" value="4" />
	            <bonus type="Armor Class" stackType="Armor" value="4" />
	            <bonus type="Maximum Dexterity Bonus" value="4" />
		        <bonus type="Armor Check" value="2" />
		        <bonus type="Light Armor Spell Failure" value="20" />
		        <bonus type="Equipment Cost" value="100" />
		        <bonus type="Encumbrance" value="25" />"
		        <itemProperty type="Hardness" value="2" />
		        <itemProperty type="Hit Points" value="15" />
	            <condition key="Equipment" name="Light Armor" />
		    </enhancement>
        </item>
    </template>
    <template name="Medium Armor">
        <item name="Steel Breastplate" slot="Armor" >
            <enhancement name="Base Item">
	            <itemProperty type="Proficiency" value="Medium Armor" />
	            <bonus type="Flat Footed Armor Class" stackType="Armor" value="6" />
	            <bonus type="Armor Class" stackType="Armor" value="6" />
		        <bonus type="Maximum Dexterity Bonus" value="3" />
		        <bonus type="Armor Check" value="4" />
		        <bonus type="Medium Armor Spell Failure" value="25" />
		        <bonus type="Equipment Cost" value="200" />
		        <bonus type="Encumbrance" value="30" />
		        <itemProperty type="Hardness" value="10" />
		        <itemProperty type="Hit Points" value="30" />
	            <condition key="Equipment" name="Medium Armor" />
		    </enhancement>
	    </item>
    </template>
    <template name="Heavy Armor">
        <item name="Steel Half-plate" slot="Armor">
            <enhancement name="Base Item">
	            <itemProperty type="Proficiency" value="Heavy Armor" />
	            <bonus type="Flat Footed Armor Class" stackType="Armor" value="8" />
	            <bonus type="Armor Class" stackType="Armor" value="8" />
	            <bonus type="Maximum Dexterity Bonus" value="0" />
		        <bonus type="Armor Check" value="7" />
		        <bonus type="Heavy Armor Spell Failure" value="40" />
		        <bonus type="Equipment Cost" value="600" />
		        <bonus type="Encumbrance" value="50" />
		        <itemProperty type="Hardness" value="10" />
		        <itemProperty type="Hit Points" value="40" />
		        <condition key="Equipment" name="Heavy Armor" />
		    </enhancement>
	    </item>
    </template>
    <template name="Shortsword">
        <item name="Shortsword" slot="Held">
            <enhancement name="Base Item">
                <itemProperty type="Proficiency" value="Martial Weapon,Shortsword" />
                <bonus type="Equipment Cost" value="15" />
                <bonus type="Encumbrance" value="3" />
            </enhancement>
            <activatedEffect name="Main Hand [Item Name]">
                <condition key="Equipment" name="Main Hand Finesse" />
	            <attack name="Main Hand Melee Attack">
	                <bonus type="Critical Range" value="1" />
	            </attack>
	            <onHitEffect name="Main Hand Melee Weapon Damage" source="Piercing">
	            	<bonus type="Damage Dice" value="1d6" />
	            </onHitEffect>
            </activatedEffect>
            <activatedEffect name="Off Hand [Item Name]" >
                <condition key="Equipment" name="Off Hand Finesse" />
                <condition key="Equipment" name="Light Off Hand" />
                <attack name="Off Hand Melee Attack">
                    <bonus type="Critical Range" value="1" />
                </attack>
                <onHitEffect name="Off Hand Melee Weapon Damage" >
                    <bonus type="Damage Dice" value="1d6" />
                </onHitEffect>
	        </activatedEffect>
	        <action name="Equip Two Hand [Item Name]" parent="Equip Main Hand Weapon" >
                <attack target="Self">
	                <onHitCondition key="Activated" name="Main Hand [Item Name]" unique="Two Hand" />
                </attack>
	        </action>
            <action name="Equip Main Hand [Item Name]" parent="Equip Main Hand Weapon" >
                <attack target="Self">
	                <onHitCondition key="Activated" name="Main Hand [Item Name]" unique="Main Hand" />
                </attack>
            </action>
            <action name="Equip Off Hand [Item Name]" parent="Equip Off Hand Weapon" >
                <attack target="Self">
	                <onHitCondition key="Activated" name="Off Hand [Item Name]" unique="Off Hand" />
                </attack>
            </action>
        </item>
    </template>
</equipmentTemplates>