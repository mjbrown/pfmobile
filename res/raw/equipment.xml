	            </attack>
	            <onHitEffect name="Main Hand Melee Weapon Damage" source="Slashing,Piercing">
	            	<bonus type="Damage d10" value="1" />
	            	<bonus type="Damage" value="1" />
	            </onHitEffect>
	            <action name="Drop [Item Name]" cost="Free">
	                <attack target="Self">
	                    <onHitCondition key="Equipment" remove="[Item Name]" />
	                    <onHitCondition key="Equipment" remove="Two Hand" />
	                </attack>
	            </action>
            </conditional>
            <conditional key="Equipment" name="Two Hand" comparator="Not">
                <conditional key="Equipment" name="Main Hand" comparator="Not">
                    <conditional key="Equipment" name="Off Hand" comparator="Not">
			            <action name="Equip Two Hand [Item Name]" parent="Equip Main Hand Weapon" >
			                <attack target="Self">
			                    <onHitCondition key="Equipment" remove="Two Hand,Main Hand,Off Hand" />
			                    <onHitCondition key="Equipment" add="Two Hand" remove="Two Hand [Item Name]" />
			                </attack>
			            </action>
		            </conditional>
	            </conditional>
            </conditional>
        </item>
    </template>
